page{
    background-color: #F6F6F6;
}
.tab_bar_container{
    border-top: 1rpx #E5E5E5 solid;
    width: 100%;
    height: 88rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 100;
    overflow: hidden;
}

.tab-bar {
    height: 88rpx;
    width:1000rpx;
}
.tab-bar-item{
    padding: 0 35rpx;
}

.tab-bar-item text {
    font-size: 28rpx;
    color: #999999;
    padding: 20rpx 0;
}

.tab-bar-item.active text {
    color: #000000;
    border-bottom:4rpx solid #00CA7C;
}



.area-list {
    margin-top: 110rpx;
}
.area-list .item {
    background-color: #ffffff;
    font-size: 28rpx;
    color:#333333;
    margin-bottom: 18rpx;
}

.area-list .item .wrap {
    padding: 30rpx 30rpx;
    border-bottom: 1rpx solid #F2F2F2;
}

.lock-name-row {
    margin:15rpx 30rpx 15rpx 0rpx;border-radius:6rpx;background:rgba(246,246,246,1);width:330rpx;padding:20rpx 0;color:#3333333;font-size:24rpx;
}

.edit-lock-row {
    color:#333333;
    text-align: left;
    margin-top: 17rpx;
    padding-left: 21rpx;
    width:500rpx;
    height:56rpx;
    background:rgba(254,254,254,1);
    border:1rpx solid rgba(230, 230, 230, 1);
    border-radius:6rpx;
}


